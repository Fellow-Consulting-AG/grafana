{
  "id": null,
  "title": "üìä DocBits API Performance - User-Friendly Dashboard",
  "tags": ["docbits", "api", "performance", "monitoring", "production"],
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "query": "label_values(nginx_ingress_controller_requests, namespace)",
        "current": {
          "value": "All",
          "text": "All"
        },
        "multi": false,
        "includeAll": true,
        "refresh": "on_dashboard_load",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        }
      },
      {
        "name": "ingress",
        "type": "query", 
        "query": "label_values(nginx_ingress_controller_requests{namespace=~\"$namespace\"}, ingress)",
        "current": {
          "value": "api",
          "text": "api"
        },
        "multi": true,
        "includeAll": true,
        "refresh": "on_dashboard_load",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "üö® CRITICAL API STATUS",
      "type": "row",
      "collapsed": false,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "‚ö° Requests per Second",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 500}
            ]
          }
        }
      },
      "gridPos": {
        "h": 6,
        "w": 4,
        "x": 0,
        "y": 1
      },
      "targets": [
        {
          "expr": "sum(rate(nginx_ingress_controller_requests{namespace=~\"$namespace\", ingress=~\"$ingress\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "üéØ Success Rate (Last 5min)",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "orange", "value": 95},
              {"color": "yellow", "value": 98},
              {"color": "green", "value": 99.5}
            ]
          }
        }
      },
      "gridPos": {
        "h": 6,
        "w": 4,
        "x": 4,
        "y": 1
      },
      "targets": [
        {
          "expr": "(1 - (sum(rate(nginx_ingress_controller_requests{namespace=~\"$namespace\", ingress=~\"$ingress\", status=~\"5..\"}[5m])) / sum(rate(nginx_ingress_controller_requests{namespace=~\"$namespace\", ingress=~\"$ingress\"}[5m])))) * 100",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "‚è±Ô∏è Response Time P50/P95/P99",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 200},
              {"color": "orange", "value": 1000},
              {"color": "red", "value": 3000}
            ]
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "P50"},
            "properties": [{"id": "displayName", "value": "P50 (Median)"}]
          },
          {
            "matcher": {"id": "byName", "options": "P95"},
            "properties": [{"id": "displayName", "value": "P95 (95th percentile)"}]
          },
          {
            "matcher": {"id": "byName", "options": "P99"},
            "properties": [{"id": "displayName", "value": "P99 (99th percentile)"}]
          }
        ]
      },
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 8,
        "y": 1
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(nginx_ingress_controller_request_duration_seconds_bucket{namespace=~\"$namespace\", ingress=~\"$ingress\"}[5m])) by (le)) * 1000",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(nginx_ingress_controller_request_duration_seconds_bucket{namespace=~\"$namespace\", ingress=~\"$ingress\"}[5m])) by (le)) * 1000", 
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(nginx_ingress_controller_request_duration_seconds_bucket{namespace=~\"$namespace\", ingress=~\"$ingress\"}[5m])) by (le)) * 1000",
          "legendFormat": "P99",
          "refId": "C"
        }
      ]
    },
    {
      "id": 5,
      "title": "üî• Active Pod Count",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "green", "value": 2}
            ]
          }
        }
      },
      "gridPos": {
        "h": 6,
        "w": 4,
        "x": 16,
        "y": 1
      },
      "targets": [
        {
          "expr": "sum(kube_deployment_status_replicas{deployment=\"api\", namespace=~\"$namespace\"})",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "title": "üìà RESPONSE TIME TRENDS",
      "type": "row",
      "collapsed": false,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 7
      }
    },
    {
      "id": 7,
      "title": "‚è∞ Response Time Over Time (P50/P95/P99)",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "barAlignment": 0,
            "lineWidth": 2,
            "fillOpacity": 0.1,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "axisColorMode": "text",
            "scaleDistribution": {
              "type": "linear"
            },
            "axisCenteredZero": false,
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 3000}
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(nginx_ingress_controller_request_duration_seconds_bucket{namespace=~\"$namespace\", ingress=~\"$ingress\"}[1m])) by (le)) * 1000",
          "legendFormat": "P50 (Median)",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(nginx_ingress_controller_request_duration_seconds_bucket{namespace=~\"$namespace\", ingress=~\"$ingress\"}[1m])) by (le)) * 1000",
          "legendFormat": "P95 (95th percentile)",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(nginx_ingress_controller_request_duration_seconds_bucket{namespace=~\"$namespace\", ingress=~\"$ingress\"}[1m])) by (le)) * 1000",
          "legendFormat": "P99 (99th percentile)",
          "refId": "C"
        }
      ]
    },
    {
      "id": 8,
      "title": "üö® SMART SLOW REQUEST ANALYSIS",
      "type": "row",
      "collapsed": false,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 9,
      "title": "üêå Requests by Speed Categories (Last 15min)",
      "type": "piechart",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            }
          },
          "mappings": []
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Fast (< 0.5s)"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}]
          },
          {
            "matcher": {"id": "byName", "options": "Normal (0.5-2s)"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}}]
          },
          {
            "matcher": {"id": "byName", "options": "Slow (2-10s)"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}}]
          },
          {
            "matcher": {"id": "byName", "options": "Very Slow (10-30s)"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}}]
          },
          {
            "matcher": {"id": "byName", "options": "Critical (>30s)"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
          }
        ]
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 17
      },
      "targets": [
        {
          "expr": "sum by(speed_category) (\n  label_replace(\n    label_replace(\n      label_replace(\n        label_replace(\n          label_replace(\n            count by (duration) ({namespace=\"ingress-nginx\"} | pattern `<_> - - <_> \"<method> <path> <_>\" <status> <_> \"<_>\" \"<_>\" <_> <duration> [<service>] [<_>] <_> <_> <_> <_> <_>` | service =~ \".*api.*\" | __error__=\"\"),\n            \"speed_category\", \"Critical (>30s)\", \"duration\", \"([3-9][0-9]|[0-9]{3,})\\..*\"\n          ),\n          \"speed_category\", \"Very Slow (10-30s)\", \"duration\", \"([12][0-9])\\..*\"\n        ),\n        \"speed_category\", \"Slow (2-10s)\", \"duration\", \"[2-9]\\..*\"\n      ),\n      \"speed_category\", \"Normal (0.5-2s)\", \"duration\", \"[01]\\.[5-9].*\"\n    ),\n    \"speed_category\", \"Fast (< 0.5s)\", \"duration\", \"0\\.[0-4].*\"\n  )\n)",
          "refId": "A",
          "legendFormat": "{{speed_category}}"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "pieType": "pie",
        "tooltip": {
          "mode": "single",
          "sort": "none"
        },
        "legend": {
          "displayMode": "visible",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "id": 10,
      "title": "üìä Top 10 Slowest API Endpoints (Last 15min)",
      "type": "table",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": {
              "type": "auto"
            },
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 80}
            ]
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "avg_duration"},
            "properties": [
              {"id": "displayName", "value": "Avg Duration (s)"},
              {"id": "unit", "value": "s"},
              {"id": "custom.width", "value": 120},
              {
                "id": "color",
                "value": {
                  "mode": "thresholds"
                }
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    {"color": "green", "value": null},
                    {"color": "yellow", "value": 2},
                    {"color": "orange", "value": 10},
                    {"color": "red", "value": 30}
                  ]
                }
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "count"},
            "properties": [
              {"id": "displayName", "value": "Request Count"},
              {"id": "custom.width", "value": 100}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "path"},
            "properties": [
              {"id": "displayName", "value": "API Endpoint"},
              {"id": "custom.width", "value": 400}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "method"},
            "properties": [
              {"id": "displayName", "value": "Method"},
              {"id": "custom.width", "value": 80}
            ]
          }
        ]
      },
      "gridPos": {
        "h": 8,
        "w": 16,
        "x": 8,
        "y": 17
      },
      "targets": [
        {
          "expr": "topk(10, avg by (path, method) (avg_over_time({namespace=\"ingress-nginx\"} | pattern `<_> - - <_> \"<method> <path> <_>\" <status> <_> \"<_>\" \"<_>\" <_> <duration> [<service>] [<_>] <_> <_> <_> <_> <_>` | service =~ \".*api.*\" | duration > 1 | unwrap duration [5m])))",
          "refId": "A",
          "legendFormat": "{{path}} {{method}}"
        }
      ],
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "source": "labels"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true
            },
            "indexByName": {
              "method": 0,
              "path": 1,
              "Value": 2
            },
            "renameByName": {
              "Value": "avg_duration"
            }
          }
        }
      ]
    },
